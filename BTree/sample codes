// // searchKey is a recursive helper for searching within a node's subtree
// func (n *Node) searchKey(key int64) (int64, error) {
// 	// Find the first key index >= key
// 	i := 0
// 	for i < n.NumKeys && key > n.Keys[i] {
// 		i++
// 	}

